{
  "manifest_version": 3,
  "name": "Right Sidebar Extension",
  "version": "1.0",
  "description": "A Chrome extension that appears on the right side of the page.",
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}